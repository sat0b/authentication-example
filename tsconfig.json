{
    "include": ["./src/**/*"],
    "compilerOptions": {
      "target": "es5",
      "module": "esnext",
      "lib": ["dom", "esnext", "dom.iterable"],
      "allowJs": true,
      "checkJs": true,
      "jsx": "react",
      "strict": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "noEmit": true,
      "skipLibCheck": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "baseUrl": "./src",
      "outDir": "./build"
    }
  }
